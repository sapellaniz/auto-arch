font-3 = Hack Nerd Font Mono:pixelsize=16;2

modules-left = bspwm
modules-center = date
modules-right = ethernet separator cpu separator memory separator battery separator volume separator power

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = 
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

label-occupied = 
